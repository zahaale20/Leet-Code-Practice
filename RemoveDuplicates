// Removes duplicates from a sorted array. Returns the length of the array (k) while modifying the input array.
import java.util.Arrays;

public class RemoveDuplicates {

	public static void main(String[] args) {
		int[] nums = {1, 1, 2, 2, 3, 4};
		System.out.println("BEFORE: " + Arrays.toString(nums));
		System.out.println("k: " + removeDuplicates(nums));
		System.out.println("AFTER: " + Arrays.toString(nums));

	}
	
	public static int removeDuplicates(int[] nums) {
		int k = 0;
		if(nums.length == 0) {
			return 0;
		}
		int length = nums.length - 1;
		for (int i = 0; i <= length; i++) { // slow iteration
			for (int j = i; j <= length; j++) { //fast iteration
				if(i != j && nums[i] == nums[j]) {
					k++;
					length--;
					for (int l = j; l <= length; l++) { //shifts array
						nums[l] = nums[l + 1];					
					}
				}
			}
		}
		return nums.length - k;
	}
}
